<UserControl
    x:Class="OllamaDemo.LlmTaskRunner.Views.LlmTaskRunnerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OllamaDemo.LlmTaskRunner.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:OllamaDemo.LlmTaskRunner.ViewModels"
    d:DataContext="{d:DesignInstance Type={x:Type vm:LlmTaskRunnerViewModel},
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Margin="4,4,4,0" Text="Systemprompt" />
            <TextBox
                Height="80"
                Margin="4"
                AcceptsReturn="True"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                Text="{Binding SystemPrompt}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <TextBlock Margin="4,4,4,0" Text="Userprompt" />
            <TextBox
                Height="80"
                Margin="4"
                AcceptsReturn="True"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                Text="{Binding UserPrompt}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="4"
                        VerticalAlignment="Center"
                        Text="Model:" />
                    <ComboBox
                        Grid.Column="0"
                        Width="150"
                        Margin="4"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                        ItemsSource="{Binding AvailableModels}"
                        SelectedItem="{Binding SelectedModel}" />
                    <Button
                        Grid.Column="1"
                        Margin="4"
                        Padding="4"
                        Command="{Binding RunCommand}"
                        Content="Ausführen" />
                </StackPanel>
                <ProgressBar
                    Grid.Column="1"
                    Width="150"
                    Margin="4"
                    Value="{Binding Progress}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Column="4"
                    Margin="4"
                    Padding="4"
                    Command="{Binding ExportToExcelCommand}"
                    Content="Excel Export"
                    IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}" />
            </Grid>
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            Margin="4"
            AutoGenerateColumns="True"
            AutoGeneratedColumns="DataGrid_AutoGeneratedColumns"
            IsReadOnly="True"
            ItemsSource="{Binding DataView}" />
    </Grid>
</UserControl>
