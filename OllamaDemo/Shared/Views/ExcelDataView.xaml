<UserControl
    x:Class="OllamaDemo.Shared.Views.ExcelDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OllamaDemo.Shared.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:OllamaDemo.Shared.ViewModels"
    d:DataContext="{d:DesignInstance Type={x:Type vm:ExcelDataViewModel},
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="4" Orientation="Horizontal">
            <Button
                Padding="4"
                Command="{Binding LoadExcelCommand}"
                Content="Excel laden" />
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            Margin="4"
            AutoGenerateColumns="True"
            AutoGeneratedColumns="DataGrid_AutoGeneratedColumns"
            IsReadOnly="True"
            ItemsSource="{Binding ExcelDataView}" />
    </Grid>
</UserControl>