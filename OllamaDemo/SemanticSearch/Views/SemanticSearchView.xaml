<UserControl
    x:Class="OllamaDemo.SemanticSearch.Views.SemanticSearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OllamaDemo.SemanticSearch.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:OllamaDemo.SemanticSearch.ViewModels"
    d:DataContext="{d:DesignInstance Type={x:Type vm:SemanticSearchViewModel},
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock
                Margin="4"
                VerticalAlignment="Center"
                Text="Model:" />
            <ComboBox
                Width="175"
                Margin="4,4,16,4"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                ItemsSource="{Binding AvailableModels}"
                SelectedItem="{Binding SelectedModel}" />
            <TextBlock
                Margin="4"
                VerticalAlignment="Center"
                Text="Id:" />
            <TextBox
                Width="100"
                Margin="4"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                Text="{Binding KeyColumns}" />
            <TextBlock
                Margin="4"
                VerticalAlignment="Center"
                Text="Text:" />
            <TextBox
                Width="150"
                Margin="4"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                Text="{Binding TextColumns}" />
            <Button
                Margin="16,4,4,4"
                Padding="4"
                Command="{Binding IndexCommand}"
                Content="Indexieren"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
            Orientation="Horizontal">
            <TextBlock
                Margin="4"
                VerticalAlignment="Center"
                Text="Suche" />
            <TextBox
                Width="300"
                Margin="4"
                Text="{Binding Query}" />
            <Button
                Margin="4"
                Padding="4"
                Command="{Binding SearchCommand}"
                Content="Suchen"
                IsEnabled="{Binding IsIndexed}" />
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <StackPanel Margin="4" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,4,0"
                        VerticalAlignment="Center"
                        Text="Top" />
                    <TextBox
                        Width="60"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding Top}" />
                </StackPanel>
                <StackPanel Margin="4" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,4,0"
                        VerticalAlignment="Center"
                        Text="Threshold" />
                    <TextBox
                        Width="80"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding Threshold}" />
                </StackPanel>
            </StackPanel>

            <ProgressBar
                Grid.Column="1"
                Width="150"
                Margin="4"
                Value="{Binding Progress}">
                <ProgressBar.Style>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ProgressBar.Style>
            </ProgressBar>
            <Button
                Grid.Column="3"
                Margin="4"
                Padding="4"
                Command="{Binding ExportToExcelCommand}"
                Content="Excel Export"
                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}" />
        </Grid>

        <DataGrid
            Grid.Row="3"
            Margin="4"
            AutoGenerateColumns="False"
            AutoGeneratedColumns="DataGrid_AutoGeneratedColumns"
            IsReadOnly="True"
            ItemsSource="{Binding Results}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Score, StringFormat=F3}"
                    Header="Score" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Item.Key}"
                    Header="Id" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Item.Text}"
                    Header="Text" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
